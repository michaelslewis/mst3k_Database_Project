{{> header}}

<div class="container-fluid text-center">
  <h1>Add, update, delete, and view data from the 'episode' table:</h1>
</div>

<div class="container-fluid col-md-offset-2">
  <form class="form-inline">
      <div class="row">
        <div class="form-group ">
          <input type="text" class="form-control" id="addtitle" placeholder="title">
        </div>
        <div class="form-group ">
          <input type="text" class="form-control" id="addepisode_number" placeholder="episode_number">
        </div>
        <div class="form-group ">
          <input type="number" class="form-control" id="addseason_number" placeholder="season_number">
        </div>
        <div class="form-group ">
          <input type="text" class="form-control" id="addrelease_date" placeholder="release_date">
        </div>
        <div class="form-group ">
          <input type="number" class="form-control" id="addmovie_id" placeholder="movie_id">
        </div>
        <div class="form-group edit-buttons">
          <button id="addRow" class="btn btn-default" role="button" type="button" name="button">Add Row</button>
        </div>
      </div>
  </form>
</div>

